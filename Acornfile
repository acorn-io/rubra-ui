args: {
  // Number of replicas
  replicas: 1

  // API Endpoint
  api: "https://localhost:8080/v1"

  // Bearer token for API
  apiKey: ""
}

services: default: {
    default: true
    ports: ["80/http"]
    container: "ui"
}

containers: ui: {
  scale: args.replicas
  build: context: "."

  env: {
    NUXT_PUBLIC_API: args.api
    NUXT_API_KEY: args.apiKey
  }

  ports: publish: "80/http"
  probes: "http://localhost/healthz"
}
